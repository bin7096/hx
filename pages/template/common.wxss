/**template.wxss**/
.goods_list{
    padding-bottom: 5rem;
}
.gl{
    display: inline-block;
    margin-right: 0.55rem;
}
.gl-title,.gl-info{
    display: block;
}
.gl-title{
    font-size: 0.63rem;
    padding-bottom: 0.3rem;
}
.gl-info{
    padding-right: 0.3rem;
}
.gl-price{
    color: red;
    font-weight: bold;
    display: inline-block;
    padding-right: 0.5rem;
}
.gl-sale{
    font-size: 0.6rem;
    color: #888;
}
.gl-car{
    width: 1rem;
    height: 1rem;
    float: right;
}
.gl-padding{
    display: block;
    height: 0.3rem;
}