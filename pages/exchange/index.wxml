<view class="body">
    <view class="bg-card">
        <view class="card">
            <view class="int-top">
                <span class="nickname">昵称：******</span>
                <span class="mobile">187****6584</span>
            </view>
            <view class="int-button">
                <span class="int-left int">
                    <span class="exchange">6754</span>
                    <span class="ex-title">积分</span>
                </span>
                <span class="int-right int">
                    <span class="exchange">+125</span>
                    <span class="ex-title">当月积分变动</span>
                </span>
            </view>
        </view>
    </view>
    <view class="goods_list" style="padding-top:0.7rem;padding-left:1.2rem;width:100%;">
        <span class="gl" style="width:{{gl_width}}px;" wx:for="{{goods_list}}" wx:for-item="gl" wx:key="glid">
            <image class="gl-img" src="{{gl.src}}" style="width:{{gl_width}}px;height:{{gl_width}}px;" />
            <text class="gl-title">{{gl.title}}</text>
            <span class="gl-info">
                <text class="gl-int">{{gl.int}}积分</text>
                <text class="gl-price">市场价：{{gl.price}}元</text>
            </span>
            <span class="gl-padding"></span>
        </span>
    </view>
</view>